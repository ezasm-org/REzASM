{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/v1.0.5/tooling/cli/schema.json",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "rezasm-tauri",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": false
      },
      "dialog": {
        "open": true
      },
      "fs": {
        "all": true,
        "scope": [
          "$APPLOCALDATA/",
          "$APPLOCALDATA/*"
        ]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "org.ezasm.rust",
      "icon": [
        "icons/icon.png",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "main",
        "url": "#/code/",
        "fullscreen": false,
        "resizable": true,
        "title": "REzASM",
        "width": 800,
        "height": 600
      }
    ]
  }
}
